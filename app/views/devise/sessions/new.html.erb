<div class="header d-flex justify-content-between p-3 mb-3 logo-header" style="height:60px;">
<img src="https://res.cloudinary.com/doxaalafc/image/upload/v1686642722/SafeTravels%20app/Logotype/Frame_197_h7wvex.png" alt="logo" style="margin:0 auto;">
</div>

<div class="container" style="width:360px;">

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
  </div>
  <small><%= render "devise/shared/forgot_password" %></small>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>
<div style="text-align:center;">
  <small>Don't have an account?<%= render "devise/shared/sign_up" %></small>
</div>
</div>
