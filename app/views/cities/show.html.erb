<div class="container" style="margin-bottom:80px; background:white; margin-top:0;">
<div class="search-index"><%= render "layouts/search_bar_index" %></div>
<div class="card-trip">
  <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="<%= @city.image_url_one %>" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="<%= @city.image_url_two %>" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="<%= @city.image_url_three %>" class="d-block w-100" alt="...">
      </div>
    </div>
  </div>
  <div class="card-trip-infos">
    <div>
      <h2><%= @city.name %>, <%= @city.country %></h2>
    </div>
  </div>
</div>

<ul class="nav nav-tabs" id="myTab" role="tablist" style="margin-top:10px;">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home-tab-pane" type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true" style="border-radius:6px;">Discover</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile-tab-pane" type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="false" style="border-radius:6px;">Safety</button>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
