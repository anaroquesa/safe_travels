<div class="header d-flex justify-content-between p-3 mb-3" style="height:60px;">
  <div class="search-index"><%= render "layouts/search_bar_home" %></div>
</div>

<div class="container itin-index" style="width:90%; margin-bottom:100px;">

  <% if @city.safety_rating == 1 %>
      <div class="card-trip" style="background-color:#B7D480;">
    <% elsif @city.safety_rating == 2 %>
      <div class="card-trip" style="background-color:#FDD984;">
    <% elsif @city.safety_rating == 3 %>
      <div class="card-trip" style="background-color:#FFA676;">
    <% else %>
      <div class="card-trip" style="background-color:#F7574F;">
  <% end %>
  <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="<%= @city.image_url_one %>" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="<%= @city.image_url_two %>" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="<%= @city.image_url_three %>" class="d-block w-100" alt="...">
      </div>
    </div>
  </div>
  <div class="card-trip-infos">
    <div>
      <h2><%= @city.name %>, <%= @city.country %></h2>
      <span>Safety Rating: <%= @city.safety_rating %></span>
    </div>
  </div>
</div>

<ul class="nav nav-tabs" id="myTab" role="tablist" style="margin-top:32px;">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home-tab-pane" type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true" style="border-radius:6px;"><i class="fa-solid fa-binoculars"></i>      Discover</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile-tab-pane" type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="false" style="border-radius:6px;"><i class="fa-solid fa-shield-heart"></i>      Safety</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="review-tab" data-bs-toggle="tab" data-bs-target="#review-tab-pane" type="button" role="tab" aria-controls="review-tab-pane" aria-selected="false" style="border-radius:6px;"><i class="fa-solid fa-quote-left"></i>      Review</button>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
    <%= render "layouts/card_activity" %>
  </div>
<div class="tab-pane fade" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">
