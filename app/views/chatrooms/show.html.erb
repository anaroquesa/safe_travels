<div class="header d-flex justify-content-between p-3" style="height:60px;">
  <h4>
    <%= link_to "< Chats", chatrooms_path %>
  </h4>
</div><div class="container chatroom" id="show">



  <div class="messages" style="margin-left:10px;">
    <% @messages.each do |message| %>
      <div id="message-<%= message.id %>" class="message">
        <div class="message-sender">
          <strong><%= message.user.first_name %></strong>
        </div>
        <div class="message-content">
          <p><%= message.content %></p>
          <%# <small><%= message.created_at.strftime("%a %b %e at %l:%M %p")</small> %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div style="position:fixed; bottom:60px; z-index:100; width:100%;">
  <%= simple_form_for [@chatroom, @message], html: { data: { action: "turbo:submit-end->chatroom-subscription#resetForm" }, class: "" } do |f| %>
      <%= f.input :content, label: false, placeholder: "Type message", wrapper_html: { class: "" } %>
      <%= f.submit "", class: "d-none" %>
  <% end %>
  </div>
