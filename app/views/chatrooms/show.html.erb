<div class="container chatroom" id="show">
  <h1>
    Chat with
    <%= @chatroom.user2.first_name == current_user.first_name ? @chatroom.user1.first_name : @chatroom.user2.first_name  %>
  </h1>

  <div class="messages">
    <% @messages.each do |message| %>
      <div id="message-<%= message.id %>" class="message">
        <div class="message-sender">
          <strong><%= message.user.first_name %></strong>
        </div>
        <div class="message-content">
          <p><%= message.content %></p>
          <%# <small><%= message.created_at.strftime("%a %b %e at %l:%M %p")</small> %>
        </div>
      </div>
    <% end %>
  </div>

  <%= simple_form_for [@chatroom, @message], html: { data: { action: "turbo:submit-end->chatroom-subscription#resetForm" }, class: "d-flex" } do |f| %>
    <%= f.input :content, label: false, placeholder: "Type message", wrapper_html: { class: "flex-grow-1" } %>
    <%= f.submit "Send", class: "btn btn-primary mb-3" %>
  <% end %>
</div>

