<div class="container mt-4 p-3">
  <h2>Edit Profile</h2>
  <% if user_signed_in? && current_user == @user %>
    <div class="edit-profile-link">
      <%= link_to "Back to Profile", user_path%>
    </div>
  <% end %>

  <div class="profile-card">
    <div class="card-content">
      <img src="<%= @user.photo %>"  class="profile-photo">
    </div>
    <p class="user-name"> <%= current_user.first_name %></p>
      <%# <div class="profile-icon">
        <i class="fa-regular fa-message"></i>
      </div> %>
</div>

<div class="container">
        <div class="Bio-user">
          <p > <%= current_user.summary%></p>
        </div>
</div>

  <div class="row col-12 justify-content-center newpage">
    <%= simple_form_for @user do |f| %>
      <div> <%= f.input :first_name %></div>
      <div><%= f.input :photo, as: :file  %></div>
      <div> <%= f.input :summary, label: "Biography" %> </div>
      <div><%= f.input :emergency_contact_name %></div>
      <div> <%= f.input :emergency_contact_number %></div>
      <div><%= f.submit "Update Profile"%></div>
    <% end %>
  </div>
</div>
