<div class="container mt-4 p-3">
  <h1>Profile</h1>
  <% if user_signed_in? && current_user == @user %>
  <div class="edit-profile-link">
    <%= link_to "Edit", edit_user_url, class: "underline-link" %>
    </div>
  <% end %>

  <div class="profile-card">
    <div class="card-content">
      <%= cl_image_tag @user.photo.key, class: "profile-photo", height: 300, width: 400, crop: :fill %>
    </div>
    <p class="user-name"> <%= current_user.first_name %></p>
  </div>

  <div class="container">
    <div class="Bio-user">
      <p > <%= current_user.summary %></p>
    </div>
  </div>

  <div class="container">
    <div class="itineries-section">
      <%= link_to "Your itineraries", itinerary_path %>
    </div>
  </div>
</div>
