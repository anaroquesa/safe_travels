<!DOCTYPE html>
<html>
  <head>
    <title>SafeTravels</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://api.mapbox.com/mapbox-gl-js/v2.11.0/mapbox-gl.css" rel="stylesheet">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

<% if params[:controller] == 'pages' &&  params[:action] == 'home' %>
    <body data-controller="home" data-home-target="body" style="margin-bottom:130px;">
    <%= render "layouts/header" %>

<% if @show_loading_page %>
    <body data-controller="home" data-home-target="body">

      <div data-home-target="logo" class="homewrapper">
        <div class="logoholder"></div>
      </div>
      <script>
        setTimeout(function() {
          window.location.href = '<%= yield :redirect_path %>';
        }, 3000); // Delay in milliseconds (e.g., 3000 for 3 seconds)
      </script>
      <%= render "shared/flashes" %>
      <%= yield %>
      <%= render "layouts/navbar" %>
    </body>
  <% else %>
    <body>
      <%= render "layouts/header" %>
      <%= render "shared/flashes" %>
      <%= yield %>
      <%= render "layouts/navbar" %>
    </body>
  <% end %>
</html>

