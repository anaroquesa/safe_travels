<% @upcoming_itineraries.group_by(&:city).each do |city, itineraries| %>
  <div class="card-product">
    <a href="<%= itinerary_path(itineraries.first) %>">
      <img src="<%= city.image_url_one %>"/>
    </a>

  <div class="card-product-infos">
  <% itineraries.each do |itinerary| %>
    <h2><%= itinerary.title %></h2>

    <h3><%= city.name %></h3>
      <p><%= itinerary.start_date %> - <%= itinerary.end_date %><p>
    <h2 class="delete"><%= link_to icon('fa-regular', 'edit icon-hover-edit'), edit_itinerary_path(itinerary) %>
      <%= link_to icon('fa-regular', 'circle-xmark'), itinerary_path(itinerary), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this itinerary?" } %>
    </h2>
      <% end %>
    </div>
  </div>
<% end %>
