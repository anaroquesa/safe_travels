 <h2>Update My Activities</h2>
  <div class="row col-12 justify-content-center center-form">
    <div>
      <%= simple_form_for @activity do |f| %>
        <%= f.input :title, label: 'Title' %>
        <%= f.input :address, label: 'Address' %>
        <%= f.input :custom, as: :hidden, input_html: { value: true } %>
        <%= f.hidden_field :city_id, value: @activity.city_id %>
        <%# <%= f.hidden_field :itinerary_id, value: @itinerary_id %>
        <%= f.submit class: "btn btn-primary", label: "Updated" %>
      <% end %>
    </div>
  </div>
</div>
