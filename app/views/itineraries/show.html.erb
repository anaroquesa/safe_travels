<div class="header col-12 d-flex justify-content-between p-3" style="height:60px;">
  <%= link_to itineraries_path, class: 'add-button' do %>
    <h4><i class="fa-solid fa-chevron-left" style="color:white;"></i></h4>
  <% end %>
  <div><h5><%= @itinerary.title %> <%= link_to new_city_activity_path(@itinerary.city_id, itinerary_id: @itinerary.id, custom: true ) do %><i class="fas fa-plus-circle"></i><% end %>
</h5></div>
  <div>
    <h4><%= link_to city_path(@itinerary.city) do %><i class="fas fa-search"></i><% end %></h4>
  </div>
</div>

<div class="container" style="margin-bottom:100px;">
  <%= render "layouts/map" %>
  <% if !@itinerary.end_date.past? %>
  <h1><%= @itinerary.title %></h1>
  <p><%= @itinerary.city.name %></p>
  <div><strong>Trip Activities</strong></div>
  <%= render "layouts/itactivities" %>
  <strong>Suggestions for you:</strong>


  <div>
    <div class="scroll-container">
    <% @activities.each do |activity| %>
      <div class="activity-image-container" style="width=100px;">
        <% unless activity.custom || @itinerary.it_activities.exists?(activity_id: activity.id) %>
            <% if activity.image_url.present? %>
              <img src="<%= activity.image_url %>" alt="">
            <% end %>
        <div class="card-product-infos">
          <p><%= activity.title %></p>
        </div>



          <%= simple_form_for([@itinerary, ItActivity.new]) do |f| %>
        <div class="card-product-infos">
            <%= f.hidden_field :activity_id, value: activity.id %>
            <%= f.hidden_field :itinerary_id, value: @itinerary.id %>
            <%= f.date_field :date %>
            <%= f.button :submit, "", class: "btn btn-primary btn-sm", disabled: @itinerary.it_activities.exists?(activity_id: activity.id) do %>
              <i class="fas fa-plus"></i>
            <% end %>
        </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
    </div>

  <% else %>
    <% if @itinerary.review.present? %>
      <h5>Review</h5>
      <%= @itinerary.review %>
    <% end %>
  <% end %>
</div>
